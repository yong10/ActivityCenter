@model Plan

<div class="container">
    <div class="jumbotron">
        <h1>Add a Plan!</h1>
        <h4><a href="dashboard">Dashboard</a> | <a href="logout">Logout</a></h4>
    </div>
    <form action ="/add/plan" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Title</label>
                    <input asp-for="Title" class="form-control">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input asp-for="Description" class="form-control">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Date</label>
                    <input asp-for="Date" class="form-control">
                    <span class="text-danger" asp-validation-for="Date"></span>
                </div>
                <div class="form-group">
                    <label>Duration</label>
                    <input asp-for="Duration" class="form-control">
                    <span class="text-danger" asp-validation-for="Duration"></span>
                </div>
            </div>
        </div>
        <input type="submit" value="Add Plan" class="btn btn-outline-dark">
    </form>
</div>